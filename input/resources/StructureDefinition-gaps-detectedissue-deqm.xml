<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="gaps-detectedissue-deqm"/>
    <url value="http://hl7.org/fhir/us/davinci-deqm/StructureDefinition/gaps-detectedissue-deqm"/>
    <name value="DEQMGapsInCareDetectedIssueProfile"/>
    <title value="DEQM Gaps In Care Detected Issue Profile"/>
    <status value="active"/>
    <date value="2021-02-04"/>
    <publisher value="Da Vinci Project"/>
    <contact>
      <telecom>
        <system value="url"/>
        <value value="http://www.hl7.org/Special/committees/cqi/index.cfm"/>
      </telecom>
    </contact>
    <description value="The DEQM Gaps In Care DetectedIssue Profile indicates that the measure that is referenced in the [DEQM Individual MeasureReport](StructureDefinition-indv-measurereport-deqm.html) has an open gap, a closed gap, or gap status is not applicable."/>
    <jurisdiction>
      <coding>
        <system value="urn:iso:std:iso:3166"/>
        <code value="US"/>
        <display value="United States of America"/>
      </coding>
    </jurisdiction>
    <fhirVersion value="4.0.1"/>
    <kind value="resource"/>
    <abstract value="false"/>
    <type value="DetectedIssue"/>
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/DetectedIssue"/>
    <derivation value="constraint"/>
    <differential>
        <element id="DetectedIssue">
            <path value="DetectedIssue"/>
        </element>
        <element id="DetectedIssue.modifierExtension">
           <path value="DetectedIssue.modifierExtension"/>
           <min value="1"/>
           <max value="1"/>
           <type>
             <code value="Extension"/>
             <profile value="http://hl7.org/fhir/us/davinci-deqm/StructureDefinition/extension-gapStatus"/>
           </type>
           <mustSupport value="true"/>
           <isModifier value="true"/>
           <isModifierReason value="Identifies care gap status detected"/>
        </element>
        <element id="DetectedIssue.code">
          <path value="DetectedIssue.code"/>
          <min value="1"/>
          <short value="A temporary code until official code is assigned"/>
          <fixedCodeableConcept>
              <coding>
                  <system value="http://terminology.hl7.org/CodeSystem/detectedissue-category"/>
                  <code value="care-gap"/>
                  <display value="Care Gap Detected"/>
              </coding>
          </fixedCodeableConcept>
          <mustSupport value="true"/>
        </element>
        <element id="DetectedIssue.patient">
            <path value="DetectedIssue.patient"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/qicore/StructureDefinition/qicore-patient"/>
            </type>
            <min value="1"/>
            <mustSupport value="true"/>
        </element>
        <element id="DetectedIssue.evidence">
            <path value="DetectedIssue.evidence"/>
            <min value="1"/>
            <mustSupport value="true"/>
        </element>
        <element id="DetectedIssue.evidence.detail">
            <path value="DetectedIssue.evidence.detail"/>
            <short value="This references either a DEQM Individual MeasureReport or a GuidanceResponse resource. Note that referencing the GuidanceResponse resource allows potential profiling on GuidanceResponse in the future without breaking backward compatibility."/>
            <comment value="The reason that this references a DEQM Individual MeasureReport is because a DEQM Gaps In Care DetectedIssue may be used stand alone and not be part of the DEQM Gaps In Care Composition."/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/davinci-deqm/StructureDefinition/indv-measurereport-deqm"/>
                <targetProfile value="http://hl7.org/fhir/StructureDefinition/GuidanceResponse"/>
            </type>
            <min value="1"/>
            <max value="1"/>
            <mustSupport value="true"/>
        </element>
    </differential>
</StructureDefinition>
